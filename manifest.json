{
	"manifest_version": 2,

	"name": "ActiveCollabInlineTimers",
	"description": "Adds inline timers to the \"My Work\" and \"Project\" pages",
	"version": "0.1",
	"author": "luveti",

	"permissions": [
		"activeTab"
	],

	"browser_action": {
		"default_title": "ActiveCollabInlineTimers",
		"default_popup": "extension/main.html"
	},

	"content_scripts": [{
		"matches": ["*://*/my-work", "*://*/projects/*"],
		"js": ["page/main.js"]
	}]
}

{
	"manifest_version": 2,
	"name": "ActiveCollabInlineTimers",
	"description": "Adds inline timers to the \"My Work\" and \"Project\" pages",
	"version": "0.3",
	"author": "luveti",
	"permissions": ["tabs", "activeTab", "webNavigation", "*://*/*"],
	"background": {"scripts": ["check/external.js"], "persistent": false},
	"browser_action": {"default_title": "ActiveCollabInlineTimers", "default_popup": "popup/main.html"},
	"content_scripts": [{"matches": ["*://*/*"], "js": ["check/internal.js"], "run_at": "document_end"}]
}


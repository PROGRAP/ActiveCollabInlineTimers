{
	"manifest_version": 2,
	"name": "ActiveCollabInlineTimers",
	"description": "Adds inline timers to the \"My Work\" and \"Project\" pages",
	"version": "0.3",
	"author": "luveti",
	"permissions": ["tabs", "activeTab", "webNavigation", "storage", "*://*/*"],
	"background": {"scripts": ["server.js"], "persistent": true},
	"content_scripts": [{"matches": ["*://*/*"], "js": ["client.js"], "run_at": "document_end"}],
	"web_accessible_resources": ["utils.js", "page.js", "page.css"],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"browser_action": {
		"default_title": "ActiveCollabInlineTimers",
		"default_popup": "popup/popup.html",
		"default_icon": {
			"19": "icons/icon16.png",
			"38": "icons/icon38.png"
		}
	}
}
